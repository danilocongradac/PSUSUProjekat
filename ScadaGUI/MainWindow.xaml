<Window x:Class="ScadaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SCADA - Main" Height="700" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Lista Tagova" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>

            <DataGrid x:Name="dgTags" AutoGenerateColumns="False" Height="350" CanUserAddRows="False" 
                      IsReadOnly="True" SelectionMode="Single" MouseDoubleClick="dgTags_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tip" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Ime" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="4*"/>
                    <DataGridTextColumn Header="IO Adresa" Binding="{Binding IOAddress}" Width="*"/>
                    <DataGridTextColumn Header="Vrednost" Binding="{Binding Value}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Dodaj Tag" Width="100" Margin="0,0,10,0" Click="btnAddTag_Click"/>
                <Button Content="Obriši Tag" Width="100" Click="btnDeleteTag_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,-10,0,0">
            <TextBlock Text="Aktivni Alarmi / Logovi" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <ListBox x:Name="lstLogs" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
