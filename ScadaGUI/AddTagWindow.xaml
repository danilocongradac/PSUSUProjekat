<Window x:Class="ScadaGUI.AddTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Tag" Height="600" Width="500">

    <DockPanel LastChildFill="True" Margin="0">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10" >
            <Button Content="Dodaj" Width="200" Margin="10,0" Click="btnAdd_Click"/>
            <Button Content="Izadji" Width="200" Margin="10,0" Click="btnCancel_Click"/>
        </StackPanel>

        <!-- ScrollViewer iznad dugmadi -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <TextBlock Text="Dodavanje novog taga" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Osnovne informacije -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Ime:" Width="120"/>
                    <TextBox x:Name="txtName" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Opis:" Width="120"/>
                    <TextBox x:Name="txtDescription" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="IO Adresa:" Width="120"/>
                    <TextBox x:Name="txtIOAddress" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Tip:" Width="120"/>
                    <ComboBox x:Name="cmbTagType" Width="250" SelectionChanged="cmbTagType_SelectionChanged">
                        <ComboBoxItem Content="DI"/>
                        <ComboBoxItem Content="DO"/>
                        <ComboBoxItem Content="AI"/>
                        <ComboBoxItem Content="AO"/>
                    </ComboBox>
                </StackPanel>

                <!-- Dinamička polja -->
                <StackPanel x:Name="panelInputProps" Visibility="Collapsed" Margin="0,15,0,0">
                    <TextBlock Text="Parametri za Input tagove" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Scan time:" Width="120"/>
                        <TextBox x:Name="txtScanTime" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="On/Off scan:" Width="120"/>
                        <CheckBox x:Name="chkOnOffScan"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel x:Name="panelAnalogProps" Visibility="Collapsed" Margin="0,15,0,0">
                    <TextBlock Text="Parametri za Analogne tagove" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Low limit:" Width="120"/>
                        <TextBox x:Name="txtLowLimit" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="High limit:" Width="120"/>
                        <TextBox x:Name="txtHighLimit" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Units:" Width="120"/>
                        <TextBox x:Name="txtUnits" Width="100"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel x:Name="panelOutputProps" Visibility="Collapsed" Margin="0,15,0,0">
                    <TextBlock Text="Parametar za Output tagove" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Initial value:" Width="120"/>
                        <TextBox x:Name="txtInitialValue" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
